generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Laptop {
  id            Int      @id @default(autoincrement())
  published     Boolean  @default(false)
  title         String
  description   String
  specs         String[]
  price         Float
  originalPrice Float
  discount      String?
  videoUrl      String?  // YouTube video URL
  datePublished DateTime @default(now())
  images        Image[]  // Relationship to images
}

model Image {
  id       Int     @id @default(autoincrement())
  url      String
  alt      String?
  position Int     @default(0) // For image ordering
  laptopId Int
  laptop   Laptop  @relation(fields: [laptopId], references: [id], onDelete: Cascade)
}
